{
    "env": {
        "commonjs": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "arrow-body-style": [2, "always"],
      "brace-style": 0,
      "class-methods-use-this": 0,
      "comma-dangle": [2, "never"],
      "indent": 0, // turned off since not compatible with 4 space continuation indent
      "max-len": [2, { "code": 125, "tabWidth": 2, "ignoreUrls": true }],
      "no-plusplus": 0,
      "object-shorthand": 0,
      "operator-linebreak": 0,
      "prefer-const": 0,
      "prefer-destructuring": 0,
      "prefer-template": 0,
      "quotes": [2, "double"]
    }
}
